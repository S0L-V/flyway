<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Spring 로그 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.springframework.web.servlet" level="ERROR"/>

    <!-- 프로젝트 상세히 -->
    <logger name="com.flyway.template" level="DEBUG"/>

    <!-- HikariCP -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="com.zaxxer.hikari.pool" level="WARN"/>

    <!-- Swagger -->
    <logger name="springfox" level="WARN"/>
    <logger name="io.springfox" level="WARN"/>

    <!-- Spring Security -->
    <logger name="org.springframework.security" level="DEBUG"/>
    <logger name="org.springframework.security.web.FilterChainProxy" level="DEBUG"/>
    <logger name="org.springframework.security.web.access" level="DEBUG"/>
    <logger name="org.springframework.security.authentication" level="DEBUG"/>

    <!-- Root Logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
